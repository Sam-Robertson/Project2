
@{
    ViewData["Title"] = "Add Appointment";
}

@model Project2.Models.Appointment


    <h1>Add an Appointment</h1>

    <div>
        <form method="post">

            <div asp-validation-summary="All"></div>


            <label asp-for="groupName">Group Name:</label>
            <input asp-for="groupName" /><br />

            <label asp-for="groupSize">Group Size:</label>
            <input asp-for="groupSize" /><br />

            <label asp-for="Email">Email:</label>
            <input asp-for="Email"/><br />

            <label asp-for="Phone">Phone Number:</label>
            <input asp-for="Phone" /><br />


            <button type="submit">Add Appointment</button>


        </form>
    </div>

